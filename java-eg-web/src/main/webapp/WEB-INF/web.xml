<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>eg-web</display-name>




  <!-- 在应用关闭和重启的时候关闭logback-classic,释放资源-->
  <context-param>
    <param-name>logbackDisableServletContainerInitializer</param-name>
    <param-value>true</param-value>
  </context-param>

  <filter>
    <filter-name>flowControlFilter</filter-name>
    <filter-class>com.bya.java.eg.web.FlowControlFilter</filter-class>
    <init-param>
      <param-name>permits</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>timeout</param-name>
      <param-value>15000</param-value>
    </init-param>
    <init-param>
      <param-name>bufferSize</param-name>
      <param-value>5</param-value>
    </init-param>
    <init-param>
      <param-name>errorUrl</param-name>
      <param-value>/index.html</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>flowControlFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!--打印日志状态信息-->
  <servlet>
    <servlet-name>ViewStatusMessages</servlet-name>
    <servlet-class>ch.qos.logback.classic.ViewStatusMessagesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ViewStatusMessages</servlet-name>
    <url-pattern>/lbClassicStatus</url-pattern>
  </servlet-mapping>


</web-app>
